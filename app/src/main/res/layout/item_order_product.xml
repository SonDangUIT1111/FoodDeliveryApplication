<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="5dp"
    app:cardCornerRadius="8dp"
    android:layout_margin="5dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:background="@color/white">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                android:id="@+id/order_product_image_container">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@mipmap/ic_launcher"
                    android:id="@+id/order_product_image"/>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_toEndOf="@id/order_product_image_container"
                android:layout_marginStart="10dp">

                <TextView
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:text="Product name"
                    android:maxLines="1"
                    android:textSize="16dp"
                    android:ellipsize="end"
                    android:id="@+id/order_product_name"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Count: 2"
                    android:textSize="12dp"
                    android:layout_marginTop="8dp"
                    android:textColor="#717171"
                    android:layout_centerVertical="true"
                    android:id="@+id/amount"/>


            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1,000,000Ä‘"
                android:textSize="14dp"
                android:layout_marginEnd="10dp"
                android:textStyle="bold"
                android:layout_marginTop="28dp"
                android:layout_alignParentEnd="true"
                android:id="@+id/order_product_price"/>
        </RelativeLayout>

</androidx.cardview.widget.CardView>