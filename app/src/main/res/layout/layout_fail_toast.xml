<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:id="@+id/layout_fail_toast"
    app:cardCornerRadius="50dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="5dp"
        android:paddingTop="5dp"
        android:paddingRight="5dp">
        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:lottie_autoPlay="true"
            android:elevation="5dp"
            app:lottie_rawRes="@raw/fail"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="15dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Failed"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:textSize="12dp"
                android:textColor="@color/app_color2"/>
            <TextView
                android:id="@+id/txtContentMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Successful add into favourite list and lorem ipsum blablah"
                android:textSize="14dp"
                android:layout_marginTop="0dp"
                android:maxLines="1"
                android:lines="1"
                android:ellipsize="end"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/backgroundFailToast"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="horizontal" />
</androidx.cardview.widget.CardView>