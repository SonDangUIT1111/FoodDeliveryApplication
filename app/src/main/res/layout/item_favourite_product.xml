<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:elevation="40dp"
    android:id="@+id/parent_of_item_in_favourite"
    >

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imgFavouriteFood"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="top|center"
            android:elevation="1dp"
            android:scaleType="centerCrop"
            android:src="@drawable/tmp2"
            app:shapeAppearanceOverlay="@style/Circle_Image"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="160dp"
            android:layout_height="260dp"
            android:background="@drawable/rectangle_item_home">

            <TextView

                android:id="@+id/txtFavouriteFoodName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:fontFamily="@font/sfpro_regular"
                android:gravity="center"
                android:text="TextView product name of item"
                android:textStyle="bold"
                android:lines="2"
                android:maxLines="2"
                android:ellipsize="end"
                android:textColor="#555555"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txtFavouriteFoodPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textColor="#E8584D"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="@+id/txtFavouriteFoodName"
                app:layout_constraintHorizontal_bias="0.52"
                app:layout_constraintStart_toStartOf="@+id/txtFavouriteFoodName"
                app:layout_constraintTop_toBottomOf="@+id/txtFavouriteFoodName" />

            <LinearLayout
                android:layout_width="99dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="@+id/txtFavouriteFoodPrice"
                app:layout_constraintStart_toStartOf="@+id/txtFavouriteFoodPrice"
                app:layout_constraintTop_toBottomOf="@+id/txtFavouriteFoodPrice">

                <ImageView
                    android:id="@+id/imgFavouriteRate"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/rating_star_empty" />

                <TextView
                    android:id="@+id/txtFavouriteRating"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingTop="2dp"
                    android:text="TextView" />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>
</LinearLayout>